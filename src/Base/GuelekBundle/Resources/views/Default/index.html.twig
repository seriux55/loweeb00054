{% extends "::base.html.twig" %}

{% block title %} {{ parent() }} Accueil {% endblock %}

{% block body %}
    <div class="intro_bloc">
	<h1>Toute l'actualité de l'Algérie</h1>
    </div>
    <div class="corp_bloc">
        <h1>Actualités</h1>		
        <section>
        {% for article in articles %}
            <article>
                <header>
                    <h2>{{ article.title }}</h2>
                    <time>Par {{ article.alias }}, le {{ article.deposit|date('d/m/Y') }}</time><br />
                </header>
                <div class="content">
                    {{ article.content|raw }}
                </div>
            </article>
        {% endfor %}
        </section>
    </div>
    <div class="outro_bloc">
    </div>
{% endblock %}
